<VideoScreen>:
    bg: bg
    anime: anime

    Image:
        id: bg
        source: root.bg_src
        pos: self.pos
        size: self.size
        keep_ratio: False
        allow_stretch: True

    Image:
        id: anime
        size: root.size
        allow_stretch: True

    Label:
        id: message
        bold: True
        text: ''
        text_size: self.size
        font_size: dp(50)
        color: 1,1,1,1
        size: self.size
        halign: 'center'
        valign: 'middle'

    #Image:
    #    source: './resource/Images/UI_images/demo_after.png'
    #    allow_stretch: True

    BoxLayout:
        orientation: 'vertical'     # 'horizontal'だと横一列

        BoxLayout: #アニメ顔画像を表示する
            size_hint_y: 0.9

        BoxLayout:
            size_hint_y: 0.1

            BoxLayout:
                size_hint_x: 0.35

            BoxLayout:
                size_hint_x: 0.1
                orientation:'horizontal'
                Button:
                    background_color: (0.3, 0.3, 0.3, 0.0)
                    #on_press: root.manager.current = 'tutorial'
                    on_release: root.tutorial_popup_open()

                    Image:
                        source: './resource/Images/UI_images/white_question.png'
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
                        allow_stretch: True


            BoxLayout:
                size_hint_x: 0.1
                orientation:'horizontal'
                Button:
                    background_color: (0.3, 0.3, 0.3, 0.0)
                    #on_press: root.manager.current = 'settings'
                    on_release: root.settings_popup_open()
                    #on_release: root.stop_video()

                    Image:
                        source: './resource/Images/UI_images/white_gear.png'
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
                        allow_stretch: True

            BoxLayout:
                size_hint_x: 0.1
                orientation:'horizontal'
                Button:
                    background_color: (0.3, 0.3, 0.3, 0.0)
                    on_press: root.manager.current = 'video'

                    Image:
                        source: './resource/Images/UI_images/orange_video.png'
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
                        allow_stretch: True

            BoxLayout:
                size_hint_x: 0.35

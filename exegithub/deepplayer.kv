<LoadDialog>:
    BoxLayout:
        orientation: "vertical"
        size: root.size
        pos: root.pos
        FileChooserListView:
            id: filechooser
            path: './'
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Load"
                on_release: root.load(filechooser.selection)
            Button:
                text: "Cancel"
                on_release: root.cancel()
<DeepPlayer>:
    BoxLayout:
        orientation: "vertical"
        ActionBar:
            ActionView:
                ActionPrevious:
                ActionButton:
                    text: 'SELECT FILE'
                    on_press: root.show_load()
        VideoPlayer:
            id: video
            source: root.fn_video
<TutorialScreen>:
    BoxLayout:
        orientation: 'vertical'     # 'horizontal'だと横一列
        size: root.size
        Label: #タイトル
            size_hint_y: 0.1
            text: 'GANIMATION'
            color: 1, 0.5, 0, 1
            font_size: 70
            canvas.before:
                Color:
                    rgba: 0.1, 0.1, 0.1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
        Label:
            size_hint_y:0.002
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

        BoxLayout: #チュートリアル
            size_hint_y: 0.698
            canvas.before:
                Color:
                    rgba: 0.1, 0.1, 0.1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                padding: 50

                Label:
                    text: 'tutorial'
                    color: 1,1,1,1
                    font_size: 50
                    canvas.before:
                        Color:
                            rgba: 0.15, 0.15, 0.15, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

        BoxLayout:
            size_hint_y: 0.1
            canvas.before:
                Color:
                    rgba: 0.1, 0.1, 0.1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                size_hint_x: 0.33
            BoxLayout:
                size_hint_x: 0.33
                orientation: 'vertical'

                BoxLayout:
                    size_hint_y: 0.4

                    Button:
                        pos_hint: {'right': 1}
                        size: 150, 75
                        text: 'close'
                        color: 1,1,1,1
                        font_size: 40
                        background_color: (0.5, 1.0, 0.0, 1.0)
                        on_press: root.manager.current = 'settings'

                BoxLayout:
                    size_hint_y: 0.4

            BoxLayout:
                size_hint_x: 0.33



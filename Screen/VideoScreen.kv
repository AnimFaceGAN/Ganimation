<VideoScreen>:
    BoxLayout:
        orientation: 'vertical'     # 'horizontal'だと横一列
        size: root.size
        BoxLayout: #画面移動ボタン
            size_hint_y: 0.1
            Button:
                text: 'settings'
                color: 0,1,0,1
                font_size: 40
                on_press: root.manager.current = 'settings'
            Button:
                text: 'tutorial'
                color: 0,1,0,1
                font_size: 40
                on_press: root.manager.current = 'tutorial'
        BoxLayout: #アニメ顔画像を表示する
            size_hint_y: 0.8
            Label:
                text: 'video'
                color: 0,1,0,1
                font_size: 50
        BoxLayout:
            size_hint_y: 0.1
            Button:
                size: 150, 75
                text: 'video on/off'
                color: 0,1,0,1
                font_size: 40
<VideoScreen>:
    canvas.before:
        Rectangle:
            source: './UI_images/bg.jpg'
            pos: self.pos
            size: self.size

    VideoManager:
        id: camera_preview
        size: root.size
        allow_stretch: True

    #Image:
    #    source: './UI_images/demo_after.png'
    #    allow_stretch: True

    BoxLayout:
        orientation: 'vertical'     # 'horizontal'ÇæÇ∆â°àÍóÒ

        BoxLayout: #ÉAÉjÉÅäÁâÊëúÇï\é¶Ç∑ÇÈ
            size_hint_y: 0.9

        BoxLayout:
            size_hint_y: 0.1


            BoxLayout:
                size_hint_x: 0.35

            BoxLayout:
                size_hint_x: 0.1
                orientation:'horizontal'
                Button:
                    background_color: (0.3, 0.3, 0.3, 0.0)
                    on_press: root.manager.current = 'tutorial'

                    Image:
                        source: './UI_images/white_question.png'
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
                        allow_stretch: True


            BoxLayout:
                size_hint_x: 0.1
                orientation:'horizontal'
                Button:
                    background_color: (0.3, 0.3, 0.3, 0.0)
                    on_press: root.manager.current = 'settings'

                    Image:
                        source: './UI_images/white_gear.png'
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
                        allow_stretch: True

            BoxLayout:
                size_hint_x: 0.1
                orientation:'horizontal'
                Button:
                    background_color: (0.3, 0.3, 0.3, 0.0)
                    on_press: root.manager.current = 'video'

                    Image:
                        source: './UI_images/orange_video.png'
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
                        allow_stretch: True

            BoxLayout:
                size_hint_x: 0.35

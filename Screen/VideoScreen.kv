<VideoScreen>:
    canvas.before:
        Rectangle:
            source: './UI_images/bg.jpg'
            pos: self.pos
            size: self.size

    VideoManager:
        id: camera_preview
        size: root.size
        allow_stretch: True

    #Image:
    #    source: './UI_images/demo_after.png'
    #    allow_stretch: True

    BoxLayout:
        orientation: 'vertical'     # 'horizontal'だと横一列

        BoxLayout: #アニメ顔画像を表示する
            size_hint_y: 0.9

        BoxLayout:
            size_hint_y: 0.1

            BoxLayout:
                size_hint_x: 0.1

                Button:
                    background_color: (0.3, 0.3, 0.3, 1.0)
                    on_press: root.manager.current = 'settings'

                    Image:
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
                        #allow_stretch: True
                        source: './UI_images/back.png'
            BoxLayout:
                size_hint_x: 0.6

            BoxLayout:
                size_hint_x: 0.3
